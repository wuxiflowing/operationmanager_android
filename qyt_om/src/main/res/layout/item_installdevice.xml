<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/horizontal_padding_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/pond_name"
        style="@style/text_primary_14"
        android:layout_width="0dp"
        android:layout_height="@dimen/item_height"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/device_identifier"
        style="@style/text_primary_14"
        android:layout_width="0dp"
        android:layout_height="@dimen/item_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:gravity="center_vertical" />

    <Button
        android:id="@+id/device_detail"
        style="@style/text_theme_14"
        android:layout_width="75dp"
        android:layout_height="28dp"
        android:background="@drawable/btn_r5_stroke_primary"
        android:gravity="center"
        android:text="@string/device_detail" />

</LinearLayout>
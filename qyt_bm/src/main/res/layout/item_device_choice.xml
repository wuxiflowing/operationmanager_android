<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white">

    <CheckBox
        android:id="@+id/device_check"
        style="@style/text_primary_14"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:button="@drawable/round_checkbox"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="KD326-2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/shape_r0_strock_gray"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/device_reduce"
            style="@style/text_primary_16"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="—" />

        <View style="@style/vertical_line" />

        <EditText
            android:id="@+id/device_count"
            style="@style/text_primary_14"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@null"
            android:enabled="false"
            android:focusable="false"
            android:gravity="center"
            android:minWidth="48dp"
            android:text="1" />

        <View style="@style/vertical_line" />

        <TextView
            android:id="@+id/device_plus"
            style="@style/text_primary_16"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="＋" />

    </LinearLayout>

</RelativeLayout>